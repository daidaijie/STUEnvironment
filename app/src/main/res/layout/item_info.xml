<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_item"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    tools:background="@color/colorPrimary"
    tools:layout_height="wrap_content"
    tools:layout_marginTop="80dp"
    tools:layout_width="wrap_content">

    <ImageView
        android:id="@+id/infoImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_jiaquan"
        android:tint="@color/colorTextFull"/>

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/infoImageView"
        android:text="0.58"
        android:textColor="@color/colorTextPrimary"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/unitTextView"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoImageView"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="mg/m³"
        android:textColor="@color/colorTextPrimary"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberTextView"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/infoImageView"
        android:text="甲醛浓度"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"/>
</RelativeLayout>